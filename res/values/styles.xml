<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Content" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000000</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="SeparateLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#FFD700</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:typeface">monospace</item>        
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="GeneralInfo" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>        
        <item name="android:textSize">15dp</item>
    </style>
    
    <style name="CpuStats" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">monospace</item>        
        <item name="android:textSize">15dp</item>
    </style>
    
    <!-- SeekBar Styling -->
    <style name="cpuFreqBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/cpufreqprogressbar</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Text Title -->
    <style name="textTitle">
        <item name="android:textColor">#FFD700</item>
        <item name="android:typeface">monospace</item>        
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="textCpu">
        <item name="android:textColor">#808080</item>
        <item name="android:typeface">monospace</item>        
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="setCpuButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/cpubutton</item>
    </style>
    
    <style name="setCpuProfileButton">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/profilebutton</item>
    </style>
    
    <style name="setCpuGovernorButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/governorbutton</item>
    </style>
    
    <style name="setIOScheduleButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/ioschedulerbutton</item>
    </style>
    
    <style name="dynamicTexts">
        <item name="android:textColor">#ffd700</item>
        <item name="android:textSize">20dp</item>
    </style>
    
</resources>
