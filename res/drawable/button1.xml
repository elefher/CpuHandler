<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#E5E4E2" />

            <stroke android:width="1dp" android:color="#D1D0CE" />

            <corners android:radius="0dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#BCC6CC" android:startColor="#BCC6CC" />

            <stroke android:width="1dp" android:color="#B6B6B4" />

            <corners android:radius="0dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>

</selector>